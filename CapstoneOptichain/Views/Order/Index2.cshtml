    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            overflow: hidden;
            font-family: 'Inter', sans-serif;
            background: #f6f8fc;
        }

        .dashboard {
            display: flex;
            height: 100vh;
            width: 100vw;
        }

        .sidebar .menu a:hover,
        .sidebar .bottom-menu a:hover {
            background: #d9e2ef;
            color: #007bff;
        }

        .card, .graph-card, .stock-card {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 10px;
            font-size: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            color: #333;
            transition: background-color 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
        }

        .sidebar .menu a i,
        .sidebar .bottom-menu a i {
            margin-right: 10px;
            font-size: 16px;
        }

        .sidebar {
            width: 220px;
            background: white;
            height: 100%;
            padding: 20px;
            border-right: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar .logo {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 30px;
            }

            .sidebar .menu a,
            .sidebar .bottom-menu a {
                display: block;
                padding: 10px;
                margin: 5px 0;
                text-decoration: none;
                color: #333;
                border-radius: 6px;
                cursor: pointer;
                font-size: 14px;
            }

                .sidebar .menu a.active,
                .sidebar .menu a:hover {
                    background: #eef3ff;
                    color: #007bff;
                }

        .main {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .search-and-toggle {
            display: flex; 
            align-items: center; 
        }

        .header input {
            padding: 8px 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
            width: 300px;
        }

        .header .dark-mode-logo {
            font-size: 20px;
            cursor: pointer;
            margin-left: 10px; 
        }

        .user-profile img {
            border-radius: 50%;
            width: 32px;
            height: 32px;
        }

        .manage-store-section {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
        }

        .manage-store-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .manage-store-header h2 {
                font-size: 1.5em;
                color: #333;
            }

        .add-store-button button {
            background: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9em;
        }

            .add-store-button button:hover {
                background: #0056b3;
            }

        .store-list {
            margin-top: 20px;
        }

        .store-item {
            border: 1px solid #eee;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .store-details {
            flex-grow: 1;
        }

        .store-name {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        .branch-name {
            color: #555;
